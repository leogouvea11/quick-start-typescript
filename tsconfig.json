{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "./build",
    "sourceMap": false,
    "removeComments": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@mutual/*": ["./libs/*"]
    }
  },
  "include": [
    "./type-overrides.d.ts",
    "./libs/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}